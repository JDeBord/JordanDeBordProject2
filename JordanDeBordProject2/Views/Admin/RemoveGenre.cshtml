@model JordanDeBordProject2.Models.ViewModels.RemoveGenreVM

@{
    var genres = (List<MovieGenre>)ViewData["Genres"];
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="RemoveGenre">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input readonly asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input readonly asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genres" class="control-label"></label>
                <input readonly asp-for="Genres" class="form-control" />
                <span asp-validation-for="Genres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenreIdToRemove" class="control-label"></label>
                <select asp-for="GenreIdToRemove" class="form-control">
                    @foreach (var gen in genres)
                    {
                        <option value="@gen.Genre.Id">@gen.Genre.Name</option>
                    }
                </select>
                <span asp-validation-for="GenreIdToRemove" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MovieDetails" asp-route-id="@Model.Id">Back to Movie Details</a> |
    <a asp-action="Index" asp-controller="Admin">Back to Admin Movie List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
