@model JordanDeBordProject2.Models.ViewModels.EditProfileVM

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input hidden readonly asp-for="ProfileId" class="form-control" />
                <span asp-validation-for="ProfileId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input hidden readonly asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CCNum" class="control-label"></label>
                <input asp-for="CCNum" class="form-control" />
                <span asp-validation-for="CCNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CCExp" class="control-label"></label>
                <input asp-for="CCExp" class="form-control" />
                <span asp-validation-for="CCExp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddLine1" class="control-label"></label>
                <input asp-for="AddLine1" class="form-control" />
                <span asp-validation-for="AddLine1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddLine2" class="control-label"></label>
                <input asp-for="AddLine2" class="form-control" />
                <span asp-validation-for="AddLine2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZIPCode" class="control-label"></label>
                <input asp-for="ZIPCode" class="form-control" />
                <span asp-validation-for="ZIPCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Watched Movies</a> |
    <a asp-action="Index" asp-controller="Movie">All Movies</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
